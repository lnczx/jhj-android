<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/item_grida_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_msg_tip" >
    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/m_rl_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/item_msg_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:padding="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_msg_close" >
            </ImageView>

            <LinearLayout
                android:id="@+id/layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/item_msg_close"
                android:orientation="vertical"
                android:gravity="left"
                 >

                <TextView
                    android:id="@+id/tv_msg_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="叮当播放"
                    android:textSize="@dimen/font_size_16"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                     />
            </LinearLayout>
             <TextView
                    android:id="@+id/tv_msg_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11-20"
                    android:layout_below="@id/layout_title"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_size_14"
                     />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m_rl_top"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_msg_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="亲爱的订单助理您好："
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_15" />

            <TextView
                android:id="@+id/tv_msg_goto_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载链接："
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_15" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>