<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_order_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/list_corner"
    android:orientation="vertical"
    android:padding="3dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/iv_order_type"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_zhongdiangong" />

        <TextView
            android:id="@+id/tv_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_order_type"
            android:gravity="center_vertical"
            android:text="钟点工"
            android:textSize="@dimen/font_size_15" />

        <TextView
            android:id="@+id/tv_order_incoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="25元"
            android:textColor="@color/simi_color_orange"
            android:textSize="@dimen/font_size_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_order_incoming"
            android:text="收入:"
            android:textSize="@dimen/font_size_15" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#999999" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f8f8f8"
        android:orientation="vertical"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_fuwu_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务地址："
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_service_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_fuwu_address"
                android:text="知春路盈都大厦"
                android:textColor="@color/simi_color_gray"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_service_addr_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2千米"
                android:textColor="@color/simi_color_gray"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_service_addr_distance"
                android:text="距你："
                android:textSize="@dimen/font_size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/tv_fuwu_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务时间："
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_service_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_fuwu_time"
                android:text="01-21 11:02"
                android:textColor="@color/simi_color_gray"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_service_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2小时"
                android:textColor="@color/simi_color_gray"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_shichang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_service_hours"
                android:text="时长："
                android:textSize="@dimen/font_size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/tv_fuwu_xiangmu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务项目："
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_service_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_fuwu_xiangmu"
                android:text="保洁+做饭"
                android:textColor="@color/simi_color_gray"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_order_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="60元"
                android:textColor="@color/simi_color_gray"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_order_money"
                android:text="订单金额："
                android:textSize="@dimen/font_size_14" />
        </RelativeLayout>

        <TextView
            android:id="@+id/iv_start_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_start_order_selectbg"
            android:padding="5dp"
            android:text="开始服务"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>