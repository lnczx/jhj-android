<com.meijialife.dingdang.picker.view.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView   xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    fresco:actualImageScaleType="centerCrop"
    fresco:placeholderImage="@drawable/mis_default_error"
    fresco:placeholderImageScaleType="fitXY"
    fresco:viewAspectRatio="1" />

    <View
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"

        />


</com.meijialife.dingdang.picker.view.SquareFrameLayout>